- model_class = Subject

- title 'Subjects'

= paginate @subjects

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th Actions
  %tbody
    - @subjects.each do |subject|
      %tr
        %td= link_to subject.name, subject_path(subject)
        %td
          = link_to 'Edit', edit_subject_path(subject), :class => 'btn btn-mini'
          = link_to 'Destroy', subject_path(subject), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to 'New', new_subject_path, :class => 'btn btn-primary'

= paginate @subjects
