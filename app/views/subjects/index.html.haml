- model_class = Subject
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @subjects.each do |subject|
      %tr
        %td= link_to subject.name, subject_path(subject)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_subject_path(subject), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), subject_path(subject), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_subject_path, :class => 'btn btn-primary'
