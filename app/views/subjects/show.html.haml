- model_class = Subject
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @subject._type
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @subject._id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @subject.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), subjects_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_subject_path(@subject), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), subject_path(@subject), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
