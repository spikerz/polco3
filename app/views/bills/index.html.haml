- model_class = Bill

- title "Bills"

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:congress)
      %th= model_class.human_attribute_name(:bill_number)
      %th= model_class.human_attribute_name(:bill_type)
      %th= model_class.human_attribute_name(:last_updated)
      %th= model_class.human_attribute_name(:bill_state)
      %th= model_class.human_attribute_name(:introduced_date)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:titles)
      %th= model_class.human_attribute_name(:summary)
      %th= model_class.human_attribute_name(:bill_actions)
      %th= model_class.human_attribute_name(:bill_html)
      %th= model_class.human_attribute_name(:ident)
      %th= model_class.human_attribute_name(:cosponsors_count)
      %th= model_class.human_attribute_name(:govtrack_id)
      %th= model_class.human_attribute_name(:govtrack_name)
      %th= model_class.human_attribute_name(:summary_word_count)
      %th= model_class.human_attribute_name(:text_word_count)
      %th= model_class.human_attribute_name(:text_updated_on)
      %th= model_class.human_attribute_name(:hidden)
      %th= model_class.human_attribute_name(:roll_time)
      %th= model_class.human_attribute_name(:sponsor_id)
      %th= model_class.human_attribute_name(:cosponsor_ids)
      %th= model_class.human_attribute_name(:subject_ids)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @bills.each do |bill|
      %tr
        %td= link_to bill.id, bill_path(bill)
        %td= bill.congress
        %td= bill.bill_number
        %td= bill.bill_type
        %td= bill.last_updated
        %td= bill.bill_state
        %td= bill.introduced_date
        %td= bill.title
        %td= bill.titles
        %td= bill.summary
        %td= bill.bill_actions
        %td= bill.bill_html
        %td= bill.ident
        %td= bill.cosponsors_count
        %td= bill.govtrack_id
        %td= bill.govtrack_name
        %td= bill.summary_word_count
        %td= bill.text_word_count
        %td= bill.text_updated_on
        %td= bill.hidden
        %td= bill.roll_time
        %td= bill.sponsor_id
        %td= bill.cosponsor_ids
        %td= bill.subject_ids
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_bill_path(bill), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), bill_path(bill), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_bill_path, :class => 'btn btn-primary'
