.form-actions
  = link_to 'back', roles_path, :class => 'btn'
  = link_to 'Edit', edit_role_path(@role), :class => 'btn'
  = link_to 'Destroy', role_path(@role), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
