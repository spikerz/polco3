= simple_form_for @role, :html => { :class => 'form-horizontal' } do |f|
  = f.input :_type
  = f.input :_id
  = f.input :congress_numbers
  = f.input :current
  = f.input :description
  = f.input :district
  = f.input :enddate
  = f.input :party
  = f.input :resource_uri
  = f.input :role_type
  = f.input :senator_class
  = f.input :startdate
  = f.input :state
  = f.input :title
  = f.input :title_long
  = f.input :website
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to 'cancel', roles_path, :class => 'btn'
