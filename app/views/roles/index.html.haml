- model_class = Role
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:_type)
      %th= model_class.human_attribute_name(:_id)
      %th= model_class.human_attribute_name(:congress_numbers)
      %th= model_class.human_attribute_name(:current)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:district)
      %th= model_class.human_attribute_name(:enddate)
      %th= model_class.human_attribute_name(:party)
      %th= model_class.human_attribute_name(:resource_uri)
      %th= model_class.human_attribute_name(:role_type)
      %th= model_class.human_attribute_name(:senator_class)
      %th= model_class.human_attribute_name(:startdate)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:title_long)
      %th= model_class.human_attribute_name(:website)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @roles.each do |role|
      %tr
        %td= link_to role.id, role_path(role)
        %td= role._type
        %td= role._id
        %td= role.congress_numbers
        %td= role.current
        %td= role.description
        %td= role.district
        %td= role.enddate
        %td= role.party
        %td= role.resource_uri
        %td= role.role_type
        %td= role.senator_class
        %td= role.startdate
        %td= role.state
        %td= role.title
        %td= role.title_long
        %td= role.website
        %td=l role.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_role_path(role), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), role_path(role), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_role_path, :class => 'btn btn-primary'
