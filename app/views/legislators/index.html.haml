- title 'Legislators'

= paginate @legislators

%table.table.table-striped
  %thead
    %tr
      %th Name
      -#%th Nickname
      -#%th Party
      -#%th Sponsored
      -#%th Cosponsored
      - if current_user.admin?
        %th Actions
  %tbody
    - @legislators.each do |legislator|
      %tr
        %td= link_to legislator.name, legislator_path(legislator)
        -#%td= legislator.nickname
        -#%td= legislator.party
        -#%td= legislator.sponsored_count
        -#%td= legislator.cosponsored_count
        - if current_user.admin?
          %td
            = link_to 'Edit', edit_legislator_path(legislator), :class => 'btn btn-mini'
            = link_to 'Destroy', legislator_path(legislator), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

- if current_user.admin?
  = link_to 'new', new_legislator_path, :class => 'btn btn-primary'

= paginate @legislators