- model_class = Legislator
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:middle_name)
      %th= model_class.human_attribute_name(:religion)
      %th= model_class.human_attribute_name(:pvs_id)
      %th= model_class.human_attribute_name(:os_id)
      %th= model_class.human_attribute_name(:metavid_id)
      %th= model_class.human_attribute_name(:bioguide_id)
      %th= model_class.human_attribute_name(:youtube_id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:nickname)
      %th= model_class.human_attribute_name(:user_approval)
      %th= model_class.human_attribute_name(:district)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:party)
      %th= model_class.human_attribute_name(:sponsored_count)
      %th= model_class.human_attribute_name(:cosponsored_count)
      %th= model_class.human_attribute_name(:full_name)
      %th= model_class.human_attribute_name(:govtrack_id)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @legislators.each do |legislator|
      %tr
        %td= link_to legislator.first_name, legislator_path(legislator)
        %td= legislator.last_name
        %td= legislator.middle_name
        %td= legislator.religion
        %td= legislator.pvs_id
        %td= legislator.os_id
        %td= legislator.metavid_id
        %td= legislator.bioguide_id
        %td= legislator.youtube_id
        %td= legislator.title
        %td= legislator.nickname
        %td= legislator.user_approval
        %td= legislator.district
        %td= legislator.state
        %td= legislator.party
        %td= legislator.sponsored_count
        %td= legislator.cosponsored_count
        %td= legislator.full_name
        %td= legislator.govtrack_id
        %td= legislator.start_date
        %td=l legislator.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_legislator_path(legislator), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), legislator_path(legislator), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_legislator_path, :class => 'btn btn-primary'
