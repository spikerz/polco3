= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f|
  = f.input :_type
  = f.input :author
  = f.input :author_email
  = f.input :comment_type
  = f.input :content
  = f.input :user_ip
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), comments_path, :class => 'btn'
