- model_class = PolcoGroup
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @polco_group._type
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @polco_group._id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @polco_group.name
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @polco_group.type
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @polco_group.description
%p
  %strong= model_class.human_attribute_name(:vote_count) + ':'
  %br
  = @polco_group.vote_count
%p
  %strong= model_class.human_attribute_name(:follower_count) + ':'
  %br
  = @polco_group.follower_count
%p
  %strong= model_class.human_attribute_name(:member_count) + ':'
  %br
  = @polco_group.member_count

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), polco_groups_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_polco_group_path(@polco_group), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), polco_group_path(@polco_group), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
