- title "#{@polco_group.type.to_s.titlecase} Group: #{@polco_group.proper_title}"

- if @polco_group.description
  %p
    %strong Description:
    = @polco_group.description

- if @polco_group.type == :custom
  %p custom

- if @polco_group.type == :district
  = render partial: "district_info", locals: {group: @polco_group}

%p
  %strong Votes:
  = @polco_group.vote_count
%p
  %strong Followers:
  = @polco_group.follower_count
%p
  %strong Members:
  = @polco_group.member_count
- if current_user.admin? || current_user.id == @polco_group.owner_id
  .form-actions
    = link_to 'back', polco_groups_path, :class => 'btn'
    = link_to 'edit', edit_polco_group_path(@polco_group), :class => 'btn'
    = link_to 'destroy', polco_group_path(@polco_group), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
