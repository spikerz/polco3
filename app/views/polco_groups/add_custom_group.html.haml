- title "Add Custom Group"

= simple_form_for @polco_group, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    = f.input :name
    = f.input :type, value: :custom, as: :hidden
    = f.input :description, as: :text
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), polco_groups_path, :class => 'btn'