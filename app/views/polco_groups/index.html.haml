- model_class = PolcoGroup
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:vote_count)
      %th= model_class.human_attribute_name(:follower_count)
      %th= model_class.human_attribute_name(:member_count)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @polco_groups.each do |polco_group|
      %tr
        %td= link_to polco_group.name, polco_group_path(polco_group)
        %td= polco_group.type
        %td= polco_group.description
        %td= polco_group.vote_count
        %td= polco_group.follower_count
        %td= polco_group.member_count
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_polco_group_path(polco_group), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), polco_group_path(polco_group), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_polco_group_path, :class => 'btn btn-primary'
