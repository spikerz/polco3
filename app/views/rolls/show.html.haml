- title "Roll: #{@roll.title}"

- bill = @roll.bill

- present @roll do |roll_presenter|
  .well
    = roll_presenter.vote_region

- if bill
  %h4
    = link_to bill.title, bill_path(bill)

%p
  %strong Chamber:
  = @roll.chamber

%p What do we want to show here? (use nick's sheets)

= render partial: 'comments/comments_section', locals: {parent: @roll, comment: @comment, author: @author, author_email: @email}

- if current_user.admin?
  .form-actions
    = link_to t('.back', :default => t("helpers.links.back")), rolls_path, :class => 'btn'
    = link_to 'Edit', edit_roll_path(@roll), :class => 'btn'
    = link_to 'Destroy', roll_path(@roll), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
