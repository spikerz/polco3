- model_class = Roll
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:chamber)
      %th= model_class.human_attribute_name(:session)
      %th= model_class.human_attribute_name(:file_name)
      %th= model_class.human_attribute_name(:result)
      %th= model_class.human_attribute_name(:required)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:bill_type)
      %th= model_class.human_attribute_name(:the_question)
      %th= model_class.human_attribute_name(:bill_category)
      %th= model_class.human_attribute_name(:aye)
      %th= model_class.human_attribute_name(:nay)
      %th= model_class.human_attribute_name(:nv)
      %th= model_class.human_attribute_name(:present)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:congress)
      %th= model_class.human_attribute_name(:vote_count)
      %th= model_class.human_attribute_name(:original_time)
      %th= model_class.human_attribute_name(:updated_time)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @rolls.each do |roll|
      %tr
        %td= link_to roll.id, roll_path(roll)
        %td= roll.chamber
        %td= roll.session
        %td= roll.file_name
        %td= roll.result
        %td= roll.required
        %td= roll.type
        %td= roll.bill_type
        %td= roll.the_question
        %td= roll.bill_category
        %td= roll.aye
        %td= roll.nay
        %td= roll.nv
        %td= roll.present
        %td= roll.year
        %td= roll.congress
        %td= roll.vote_count
        %td= roll.original_time
        %td= roll.updated_time
        %td=l roll.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_roll_path(roll), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), roll_path(roll), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_roll_path, :class => 'btn btn-primary'
