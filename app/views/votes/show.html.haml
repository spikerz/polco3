- model_class = Vote
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @vote._type
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @vote._id
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @vote.value
%p
  %strong= model_class.human_attribute_name(:chamber) + ':'
  %br
  = @vote.chamber

.form-actions
  = link_to 'back', votes_path, :class => 'btn'
  = link_to 'Edit', edit_vote_path(@vote), :class => 'btn'
  = link_to 'Destroy', vote_path(@vote), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
