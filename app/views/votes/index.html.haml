- model_class = Vote

- title "Your Votes"

= paginate @votes

%table.table.table-striped
  %thead
    %tr
      %th Vote
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:chamber)
      %th= model_class.human_attribute_name(:created_at)
      %th Actions
  %tbody
    - @votes.each do |vote|
      %tr
        %td= link_to vote.roll.title, vote_path(vote)
        %td= vote.value
        %td= vote.chamber
        %td=l vote.created_at
        %td
          = link_to 'Edit', edit_vote_path(vote), :class => 'btn btn-mini'
          = link_to 'Destroy', vote_path(vote), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to 'New', new_vote_path, :class => 'btn btn-primary'

= paginate @votes
