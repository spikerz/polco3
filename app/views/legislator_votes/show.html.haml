- model_class = LegislatorVote
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @legislator_vote._type
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @legislator_vote._id
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @legislator_vote.value
%p
  %strong= model_class.human_attribute_name(:legislator_id) + ':'
  %br
  = @legislator_vote.legislator_id
%p
  %strong= model_class.human_attribute_name(:roll_id) + ':'
  %br
  = @legislator_vote.roll_id
%p
  %strong= model_class.human_attribute_name(:bill_id) + ':'
  %br
  = @legislator_vote.bill_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), legislator_votes_path, :class => 'btn'
  = link_to 'Edit', edit_legislator_vote_path(@legislator_vote), :class => 'btn'
  = link_to 'Destroy', legislator_vote_path(@legislator_vote), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
