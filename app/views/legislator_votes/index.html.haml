- model_class = LegislatorVote
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:legislator_id)
      %th= model_class.human_attribute_name(:roll_id)
      %th= model_class.human_attribute_name(:bill_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @legislator_votes.each do |legislator_vote|
      %tr
        %td= link_to legislator_vote.id, legislator_vote_path(legislator_vote)
        %td= legislator_vote.value
        %td= legislator_vote.legislator_id
        %td= legislator_vote.roll_id
        %td= legislator_vote.bill_id
        %td=l legislator_vote.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_legislator_vote_path(legislator_vote), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), legislator_vote_path(legislator_vote), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_legislator_vote_path, :class => 'btn btn-primary'
